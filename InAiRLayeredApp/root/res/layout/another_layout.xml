<?xml version="1.0" encoding="utf-8"?>

<UILayeredViewItem
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ui="http://schemas.android.com/apk/res-auto"
    tools:context=".MainLayout"
    ui:title="{ Binding Path='layerTitle' }">

    <UIViewGroup
        ui:width="310"
        ui:height="720"
        ui:positionX="20"
        ui:positionY="0">

        <UIImageView
            ui:width="310"
            ui:height="254"
            ui:positionX="0"
            ui:positionY="100"
            ui:src="{ Binding Path='bindingImage' }" />

        <UITextView
            ui:width="310"
            ui:height="100"
            ui:positionX="20"
            ui:positionY="400"
            ui:text="{ Binding Path='bindingText' }"
            ui:textSize="40">
        </UITextView>

    </UIViewGroup>

</UILayeredViewItem>